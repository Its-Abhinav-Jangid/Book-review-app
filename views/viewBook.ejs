<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
  <link rel="stylesheet" href="../css/viewBook.css" />
  <title>
    <%= books[0].title %>
  </title>

</head>

<body>
  <div class="page">
    <h1 class="title">
      <%= books[0].title %>
    </h1>
    <div class="container">
      <div class="left-container">
        <div class="book-cover">
          <img src="<%= books[0].cover_image_url %>" alt="" />
        </div>
        <div class="categories">
          <div class="category-tags">
            <span class="tag">
              <%= books[0].genre %>
            </span>

          </div>
        </div>
      </div>
      <div class="right-container">
        <div class="book-details">
          <div class="left">
            <h3>Author:<span>
                <%= books[0].author %>
              </span></h3>
            <h3>Pages: <span>
                <%= book_details[0].pages %>
              </span></h3>
            <h3>
              Rating:
              <span class="rating">
                <% for (let i=1; i <=5; i++) { %>
                  <% if (i <=books[0].rating) { %>
                    <i class="fa-solid fa-star"></i>
                    <% } else { %>
                      <i class="fa-regular fa-star"></i>
                      <% } %>
                        <% } %>
              </span>
            </h3>

          </div>
          <div class="right">
            <h3>Genre:<span>
                <%= books[0].genre %>
              </span></h3>
            <h3>Publisher:<span>
                <%= book_details[0].publisher %>
              </span></h3>
            <h3>Published Year:<span>
                <%= books[0].published_year %>
              </span></h3>
          </div>
        </div>
        <div class="book-description">
          <h2>Description</h2>
          <p>
            <%- book_details[0].description %>
          </p>
        </div>

        <div class="book-notes">
          <h2>Notes</h2>
          <p>
            <%= book_details[0].notes %>
          </p>
        </div>
        <div class="book-notes">
          <h2>Review</h2>
          <p>
            <%= book_details[0].review %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="delete-book-cta">
    <button class="cta-button" onclick="deleteBook('<%= books[0].id %>')">
      <i class="fa fa-trash" style="font-size: 24px;" aria-hidden="true"></i>

    </button>
  </div>

  <script src="https://kit.fontawesome.com/2128caa8e9.js" crossorigin="anonymous"></script>
 <script>
 async function deleteBook(bookId) {
  const userConfirmed = confirm(
    "Are you sure you want to delete this book? This action cannot be undone."
  );

  if (!userConfirmed) {
    return; // Exit if the user cancels
  }

  try {
    // Send DELETE request
    const response = await fetch("/book", {
      method: "DELETE",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ id: bookId }),
    });

    if (response.ok) {
      const data = await response.json();
      alert(data.message || "The book has been successfully deleted."); // Use response message if available
      location.href = "/"; // Redirect to homepage or another page
    } else {
      const errorData = await response.json();
      alert(
        errorData.message ||
          "We encountered an issue while trying to delete the book. Please try again later."
      );
    }
  } catch (error) {
    console.error("Error:", error);
    alert(
      "An unexpected error occurred. Please check your internet connection or try again later."
    );
  }
}

</script>

 
</body>

</html>